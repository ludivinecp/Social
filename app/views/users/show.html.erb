<h1>Mon profil</h1>

  <h2>Mes amis</h2>


  <ul>
    <%@friendship.each do |friend|%>
       <li> <%= User.find(friend.new_friend).try(:firstname)%> : <%= User.find(friend.new_friend).email%> (<%= link_to "remove", friend, :method => :delete %>)
    <%end%>
  </ul>


  <h2>Tous les utilisateurs</h2>

   <ul>
    <%@users.each do |user|%>
      <% if user.email !=current_user.email%>
           <li> <%= user.try(:firstname)%>
            <%= link_to "Add Friend", friends_path(:new_friend => user), :method => :post %>
      <%end%>
    <%end%>
  </ul>

